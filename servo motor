import RPi.GPIO as GPIO
import time

# Use Broadcom pin numbering
GPIO.setmode(GPIO.BCM)

# Define the GPIO pin connected to the servo
SERVO_PIN = 17

# Set up the servo pin as an output
GPIO.setup(SERVO_PIN, GPIO.OUT)

# Set PWM at 50Hz (standard for servo motors)
pwm = GPIO.PWM(SERVO_PIN, 50)
pwm.start(0)

def set_angle(angle):
    # Convert angle (0-180) to duty cycle
    duty_cycle = 2 + (angle / 18)
    pwm.ChangeDutyCycle(duty_cycle)
    time.sleep(0.5)
    pwm.ChangeDutyCycle(0)  # Stop sending signal

try:
    while True:
        angle = input("Enter angle (0 to 180): ")
        if angle.isdigit():
            angle = int(angle)
            if 0 <= angle <= 180:
                set_angle(angle)
            else:
                print("Angle out of range.")
        else:
            print("Please enter a number.")

except KeyboardInterrupt:
    print("\nExiting program...")

finally:
    pwm.stop()
    GPIO.cleanup()
# control-servo-with-Raspberrypi
Control a servo motor using Raspberry Pi GPIO pins with Python. 
